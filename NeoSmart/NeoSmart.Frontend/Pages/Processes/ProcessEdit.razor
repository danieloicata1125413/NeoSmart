@page "/processes/edit/{ProcessId:int}"
@attribute [Authorize(Roles = "Administrador")]
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Editar Proceso</h3>

@if (process is null)
{
    <Loading/>
}
else
{
    <ProcessForm @ref="processForm" Process="process" OnValidSubmit="SaveAsync" ReturnAction="Return" />
}

@code {
    private Process? process;
    private ProcessForm? processForm;

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    [Parameter]
    public int ProcessId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        var response = await repository.GetAsync<Process>($"/api/processes/{ProcessId}");
        if (response.Error)
        {
            if (response.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                Return();                
            }
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }
        process = response.Response;
    }

    private async Task SaveAsync()
    {
        var response = await repository.PutAsync($"/api/processes", process);
        if (response.Error)
        {
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        await BlazoredModal.CloseAsync(ModalResult.Ok());
        Return();

        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Cambios guardados con éxito.");
    }

    private void Return()
    {
        processForm!.FormPostedSuccessfully = true;
        navigationManager.NavigateTo("/processes");
    }
}
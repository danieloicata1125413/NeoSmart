@page "/TopicExams/edit/{TopicExamId:int}"
@attribute [Authorize(Roles = "SuperAdmin,Admin")]
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

@if (topicExam is null)
{
    <Loading />
}
else
{
    <TopicExamForm Titulo="Editar Examen" @ref="topicExamForm" topicExam="topicExam" OnValidSubmit="SaveAsync" ReturnAction="Return" />
}

@code {
    private TopicExam? topicExam;
    private TopicExamForm? topicExamForm;

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    [Parameter]
    public int TopicExamId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        var response = await repository.GetAsync<TopicExam>($"/api/topicExams/{TopicExamId}");
        if (response.Error)
        {
            if (response.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                Return();
            }
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }
        topicExam = response.Response;
    }

    private async Task SaveAsync()
    {
        topicExam!.Topic = null;
        topicExam!.TopicExamQuestions = null;
        var response = await repository.PutAsync($"/api/topicExams", topicExam);
        if (response.Error)
        {
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        await BlazoredModal.CloseAsync(ModalResult.Ok());
        Return();

        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Cambios guardados con éxito.");
    }

    private void Return()
    {
        topicExamForm!.FormPostedSuccessfully = true;
        navigationManager.NavigateTo($"/topicExams/{topicExam.TopicId}");
    }
}
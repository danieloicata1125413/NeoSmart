@page "/TopicExams/create/{TopicId:int}"
@attribute [Authorize(Roles = "SuperAdmin,Admin")]
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<TopicExamForm Titulo="Nuevo Examen" @ref="topicExamForm" topicExam="topicExam" OnValidSubmit="CreateAsync" ReturnAction="Return" />

@code {
    private TopicExam topicExam = new()
        {
            TopicId = 0,
            Status = true
        };

    [Parameter]
    public int TopicId { get; set; }

    private TopicExamForm? topicExamForm;

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    private async Task CreateAsync()
    {
        topicExam.TopicId = TopicId;
        var response = await repository.PostAsync("/api/TopicExams", topicExam);
        if (response.Error)
        {
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        await BlazoredModal.CloseAsync(ModalResult.Ok());
        Return();

        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Registro creado con éxito.");
    }

    private void Return()
    {
        topicExamForm!.FormPostedSuccessfully = true;
        navigationManager.NavigateTo($"/topicExams/{topicExam.TopicId}");
    }
}

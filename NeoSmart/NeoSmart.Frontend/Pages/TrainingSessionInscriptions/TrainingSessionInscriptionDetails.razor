@page "/TrainingSessionInscriptions/Details/{TrainingSessionInscriptionId:int}"
@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService
@attribute [Authorize(Roles = "SuperAdmin,Admin,Manager,Leader,Capacitador,Empleado")]

@if (loading)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h4 class="float-start">Detalle de inscripción</h4>
                    <a class="btn btn-danger float-end me-1" href="/TrainingSessionInscriptions/My"><i class="oi oi-ban" /> Cerrar</a>
                </div>
            </div>
        </div>
        <div class="card-body m-2">
            <div class="row mx-2 my-2">
                <div class="col-6">
                    <h5><strong>Trabajador</strong></h5>
                    <div class="row">
                        <div class="col-4">
                            <p>Nombre</p>
                            <p>Documento</p>
                            <p>Teléfono</p>
                            <p>Email</p>
                            <p>Dirección</p>
                        </div>
                        <div class="col-8">
                            <p><strong>@trainingSessionInscription!.User!.FullName</strong></p>
                            <p><strong>@trainingSessionInscription!.User!.Document</strong></p>
                            <p><strong>@trainingSessionInscription!.User!.PhoneNumber</strong></p>
                            <p><strong>@trainingSessionInscription!.User!.UserName</strong></p>
                            <p><strong>@trainingSessionInscription!.User!.Address, @trainingSessionInscription!.User!.City!.Name, @trainingSessionInscription!.User!.City!.State!.Name, @trainingSessionInscription!.User!.City.State!.Country!.Name</strong></p>
                        </div>
                    </div>
                    @if (trainingSessionInscription!.TrainingSession!.User != null)
                    {
                        <h5><strong>Capacitador</strong></h5>
                        <div class="row">
                            <div class="col-4">
                                <p>Nombre</p>
                                <p>Documento</p>
                                <p>Teléfono</p>
                                <p>Email</p>
                            </div>
                            <div class="col-8">
                                <p><strong>@trainingSessionInscription!.TrainingSession!.User!.FullName</strong></p>
                                <p><strong>@trainingSessionInscription!.TrainingSession!.User!.Document</strong></p>
                                <p><strong>@trainingSessionInscription!.TrainingSession!.User!.PhoneNumber</strong></p>
                                <p><strong>@trainingSessionInscription!.TrainingSession!.User!.UserName</strong></p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-6">
                    <CarouselView Images="@trainingSessionInscription!.TrainingSession!.Training!.MainImages" />
                    <div class="row">
                        <div class="col-4">
                            @* <p>Imagen</p> *@
                            <p>Capacitación</p>
                            <p>Fecha</p>
                            <p>Estado</p>
                            <p>Comentarios</p>
                        </div>
                        <div class="col-8">
                            @* <p><img src="@inscription.Training!.MainImage" style="width:100px;" /></p> *@
                            <p>@trainingSessionInscription.TrainingSession!.Training!.Description</p>
                            <p><strong>@($"{trainingSessionInscription.Date.ToLocalTime():yyyy/MM/dd hh:mm tt}")</strong></p>
                            <p><strong>@trainingSessionInscription.TrainingSessionInscriptionStatus!.Description</strong></p>
                            <p><strong>@(string.IsNullOrEmpty(trainingSessionInscription.Remarks) ? "NA" : trainingSessionInscription.Remarks)</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <label>Temas:</label>
                        @foreach (var trainingTopic in trainingSessionInscription.TrainingSession!.Training!.TrainingTopics!)
                        {
                            <b>@trainingTopic.Topic!.Description</b>
                        }
                    </div>
                </div>
            </div>


        </div>
        <div class="card-footer">
            @if (trainingSessionInscription!.TrainingSessionInscriptionStatus!.Name.Equals("Registered"))
            {
                <CascadingAuthenticationState>
                    <AuthorizeView Roles="Employee">
                        <Authorized>
                            <button class="btn btn-sm btn-danger float-end mx-2" @onclick=@(() => CancelInscriptionAsync())><i class="oi oi-trash" /> Cancelar</button>
                        </Authorized>
                    </AuthorizeView>
                </CascadingAuthenticationState>
                <CascadingAuthenticationState>
                    <AuthorizeView Roles="Admin, Manager">
                        <Authorized>
                            <button class="btn btn-sm btn-primary float-end mx-2" @onclick=@(() => RefusedInscriptionAsync())><i class="oi oi-external-link" /> Rechazar</button>
                            <button class="btn btn-sm btn-dark float-end mx-2" @onclick=@(() => ConfirmedOrderAsync())><i class="oi oi-thumb-up" /> Confirmar</button>
                        </Authorized>
                    </AuthorizeView>
                </CascadingAuthenticationState>
            }
        </div>
    </div>
}

@code {
    private List<TrainingSessionInscriptionStatus>? trainingSessionInscriptionStatus;
    private TrainingSessionInscription? trainingSessionInscription;
    private bool loading = true;

    [Parameter]
    public int TrainingSessionInscriptionId { get; set; }

    [CascadingParameter]
    CascadingAuthenticationState CascadingAuthenticationState { get; set; } = default!;

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    protected async override Task OnInitializedAsync()
    {
        await LoadTrainingSessionInscriptionStatusAsync();
        await LoadAsync();
    }

    private async Task LoadTrainingSessionInscriptionStatusAsync()
    {
        var responseHttp = await repository.GetAsync<List<TrainingSessionInscriptionStatus>>("/api/TrainingSessionInscriptionStatus/combo");
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        trainingSessionInscriptionStatus = responseHttp.Response;
    }

    private async Task LoadAsync()
    {
        loading = true;
        var responseHttp = await repository.GetAsync<TrainingSessionInscription>($"api/TrainingSessionInscriptions/{TrainingSessionInscriptionId}");
        if (responseHttp.Error)
        {
            loading = false;
            if (responseHttp.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/TrainingSessionInscriptions");
                return;
            }
            var messageError = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", messageError, SweetAlertIcon.Error);
            return;
        }
        trainingSessionInscription = responseHttp.Response;
        loading = false;
    }

    private async Task CancelInscriptionAsync()
    {
        var status = trainingSessionInscriptionStatus.Where(s => s.Name == "Cancelled").FirstOrDefault();
        if (status != null)
        {
            await ModifyTemporalOrder("Cancelar", status);
        }
    }

    private async Task RefusedInscriptionAsync()
    {
        var status = trainingSessionInscriptionStatus.Where(s => s.Name == "Refused").FirstOrDefault();
        if (status != null)
        {
            await ModifyTemporalOrder("Rechazar", status);
        }
    }

    private async Task ConfirmedOrderAsync()
    {
        var status = trainingSessionInscriptionStatus.Where(s => s.Name == "Confirmed").FirstOrDefault();
        if (status != null)
        {
            await ModifyTemporalOrder("Confirmar", status);
        }
    }

    private async Task ModifyTemporalOrder(string message, TrainingSessionInscriptionStatus status)
    {
        var result = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = $"¿Esta seguro que quieres {message} la solicitud?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);
        if (confirm)
        {
            return;
        }

        var trainingSessionInscriptionDTO = new TrainingSessionInscriptionDTO
            {

                Id = TrainingSessionInscriptionId,
                InscriptionStatus = status
            };

        var responseHTTP = await repository.PutAsync("api/TrainingSessionInscriptions", trainingSessionInscriptionDTO);
        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            return;
        }

        await BlazoredModal.CloseAsync(ModalResult.Ok());
        navigationManager.NavigateTo("/TrainingSessionInscriptions");
    }

}

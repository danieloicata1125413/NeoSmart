@page "/TrainingSessionExams/edit/{TrainingSessionExamId:int}"
@attribute [Authorize(Roles = "SuperAdmin,Admin")]
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

@if (TrainingSessionExam is null)
{
    <Loading/>
}
else
{
    <TrainingSessionExamForm Titulo="Editar Examen" @ref="TrainingSessionExamForm" TrainingSesionId="TrainingSesionId" TrainingSessionExam="TrainingSessionExam" OnValidSubmit="SaveAsync" ReturnAction="Return" />
}

@code {
    private SessionExamDTO? TrainingSessionExam;
    private TrainingSessionExamForm? TrainingSessionExamForm;

    public int TrainingSesionId { get; set; }

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    [Parameter]
    public int TrainingSessionExamId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        var response = await repository.GetAsync<SessionExamDTO>($"/api/TrainingSessionExams/{TrainingSessionExamId}");
        if (response.Error)
        {
            if (response.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                Return();                
            }
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }
        TrainingSessionExam = response.Response;
        TrainingSesionId = TrainingSessionExam!.TrainingSessionId;
    }

    private async Task SaveAsync()
    {
        TrainingSessionExam!.TrainingSession = null;
        TrainingSessionExam!.TrainingExam = null;
        var response = await repository.PutAsync($"/api/TrainingSessionExams", TrainingSessionExam);
        if (response.Error)
        {
            var message = await response.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        await BlazoredModal.CloseAsync(ModalResult.Ok());
        Return();

        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Cambios guardados con éxito.");
    }

    private void Return()
    {
        TrainingSessionExamForm!.FormPostedSuccessfully = true;
        navigationManager.NavigateTo($"/TrainingSessionExams/{TrainingSesionId}");
    }
}